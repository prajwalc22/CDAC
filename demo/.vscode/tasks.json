{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-std=c11",
                "-o",
                "${fileBasenameNoExtension}",
                "${file}",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "compile and run",
            "type": "shell",
            "command": "gcc -std=c11 -o \"${fileBasenameNoExtension}\" \"${file}\" -lm && ./\"${fileBasenameNoExtension}\" < input.txt > output.txt",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}